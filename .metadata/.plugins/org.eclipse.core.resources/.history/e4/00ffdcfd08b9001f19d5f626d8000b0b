#include "main.h"


void start_meas( void ){
  if( W1_IN & 1<< W1_PIN ){
    w1_command( CONVERT_T, NULL );
    W1_OUT |= 1<< W1_PIN;
    W1_DDR |= 1<< W1_PIN;			// parasite power on
  }
}


int read_meas( void )
{
  uchar id[8], diff;
  //uchar s[30];
  uchar i;
  uint temp;

  for( diff = SEARCH_FIRST; diff != LAST_DEVICE; ){
    diff = w1_rom_search( diff, id );

    if( diff == PRESENCE_ERR ){
    	rf12_txdata("presence err", 15);
    	break;
    }
    if( diff == DATA_ERR ){
    	rf12_txdata("data err", 15);
      break;
    }
    if( id[0] == 0x28 || id[0] == 0x10 ){	// temperature sensor
      for( i = 0; i < 8; i++ ){
      }
      w1_byte_wr( READ );			// read command
      temp = w1_byte_rd();			// low byte
      temp |= (uint)w1_byte_rd() << 8;		// high byte
      if( id[0] == 0x10 )			// 9 -> 12 bit
        temp <<= 3;
      return temp;
    }
  }
  return 0xffff;
}
